{
    "manifest_version": 3,
    "name": "助手",
    "version": "1.0.0",
    "description": "助手",
    "content_security_policy": {
        "script-src": "self",
        "object-src": "self"
    },
    "icons": {
        "16": "static/img/icon.png",
        "19": "static/img/icon.png",
        "38": "static/img/icon.png",
        "48": "static/img/icon.png",
        "128": "static/img/icon.png"
    },
    "action": {
        "default_icon": "static/img/icon.png",
        "default_title": "助手",
        "default_popup": "popup.html"
    },
    "options_page": "option.html",
    "background": {
        "service_worker": "background.main.js"
    },
    "content_scripts": [{
        "matches": [
            "*://*/*"
        ],
        "css": [
            "static/content/css/index.css",
            "static/content/css/base.css",
            "static/content/js/dialog/dialog.css",
            "static/content/css/main.css"
        ],
        "js": [
            "static/content/js/jquery/jquery.min.js",
            "static/content/js/md5.js",
            "static/content/js/base_js/base.js",
            "static/content/js/dialog/dialog.js",
            "static/content/js/link.js",
            "content.main.js"
        ],
        "run_at": "document_end"
    }],
    "host_permissions": [
        "*://*/*"
    ],
    "permissions": [
        "declarativeNetRequest",
        "declarativeNetRequestFeedback",
        "contextMenus",
        "webRequest",
        "tabs",
        "activeTab",
        "notifications",
        "storage",
        "unlimitedStorage",
        "downloads",
        "cookies",
        "management",
        "webNavigation"
    ]
}